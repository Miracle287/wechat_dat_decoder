#!/usr/bin/env node

let fs = require('fs');
let log = print = console.log;
let decoder = require('../lib/decoder');

let argv = require("minimist")(process.argv.slice(2), {
    alias: {
        'dir': 'd'
    },
    string: ['dir'],
    'default': {
        'dir': process.cwd()
    }
});

decoder(argv.dir)
print('开始检索并进行解码...');

